{
	"name": "factions",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"client:dev": "vite client",
		"server:run": "tsc --project server/tsconfig.json && node './~$dist/server/index.js'",
		"client:build": "vite build client --emptyOutDir",
		"server:build": "tsc --project server/tsconfig.json",
		"server:deploy": "git -C ../factions-server-deploy reset --hard && tsc --project server/tsconfig.json && node build/deploy && echo `date` && git -C ../factions-server-deploy add . && git -C ../factions-server-deploy commit -m \"ðŸš€\" && git -C ../factions-server-deploy push dokku main && echo `date`",
		"start": "node './~$dist/server/index.js'"
	},
	"dependencies": {
		"esm-seedrandom": "3.0.5",
		"fastify": "^3.21.6",
		"fastify-cors": "^6.0.2",
		"postgres": "^2.0.0-beta.9",
		"socket.io": "^4.2.0",
		"vue": "^3.2.16"
	},
	"devDependencies": {
		"@ky-is/eslint-config": "^2.3.6",
		"@tailwindcss/forms": "^0.3.3",
		"@types/node": "^16.9.6",
		"@types/seedrandom": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^4.31.2",
		"@typescript-eslint/parser": "^4.31.2",
		"@vitejs/plugin-vue": "^1.9.0",
		"@vue/compiler-sfc": "^3.2.16",
		"@vue/eslint-config-typescript": "^7.0.0",
		"autoprefixer": "^10.3.5",
		"eslint": "^7.32.0",
		"eslint-plugin-vue": "^7.18.0",
		"fs-extra": "^10.0.0",
		"postcss": "^8.3.7",
		"socket.io-client": "^4.2.0",
		"tailwindcss": "^2.2.15",
		"typescript": "^4.4.3",
		"vite": "^2.5.10",
		"vue-router": "^4.0.11"
	},
	"eslintConfig": {
		"extends": "@ky-is/eslint-config/vue-typescript",
		"parserOptions": {
			"sourceType": "module",
			"project": [
				"tsconfig.eslint.json"
			]
		},
		"rules": {
			"@typescript-eslint/strict-boolean-expressions": "error"
		}
	},
	"eslintIgnore": [
		"~$dist"
	],
	"imports": {
		"#c/*": "./~$dist/common/*",
		"#s/*": "./~$dist/server/*"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {
				"config": "./client/tailwind.config.cjs"
			}
		}
	}
}
